<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:gravity="center_horizontal"
            android:text="@string/settingsString"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/defaultBudgetTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:text="@string/defaultBudgetString"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diningTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/diningString"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"

                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groceryTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/groceryString"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clothingTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/clothingString"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNumber3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transportationTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/transportationString"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNumber4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"

                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entertainmentTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/entertainmentString"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNumber5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/miscTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/miscString"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNumber6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number" />
        </LinearLayout>

        <Switch
            android:id="@+id/darkModeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/darkModeString"
            android:paddingLeft="90dp"
            android:paddingRight="150dp"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:background="#D9D9D9"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notificationString"
            android:paddingLeft="90dp"
            android:paddingRight="150dp"
            android:textSize="20sp"
            android:background="#D9D9D9"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

</FrameLayout>
