<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:gravity="center_horizontal"
            android:text="@string/settingsString"
            android:textColor="@color/textColor"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/defaultBudgetTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:text="@string/defaultBudgetString"
            android:textColor="@color/textColor"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diningTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/diningString"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/diningBudgetEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:textColor="@color/budgetTextColor"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groceryTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/groceryString"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/groceryBudgetEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:textColor="@color/budgetTextColor"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clothingTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/clothingString"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/clothingBudgetEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:textColor="@color/budgetTextColor"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transportationTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/transportationString"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/transportationBudgetEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:textColor="@color/budgetTextColor"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entertainmentTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/entertainmentString"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/entertainmentBudgetEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:textColor="@color/budgetTextColor"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="75dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/miscTextView"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="@string/miscString"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/miscBudgetEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:textColor="@color/budgetTextColor"
                android:background="@drawable/rounded_edittext_background"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:background="@color/greyColor"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_darkmode_icon"
                android:layout_gravity="center"
                android:layout_marginStart="75dp" />

            <Switch
                android:id="@+id/darkModeSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/darkModeString"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="120dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/greyColor">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notification_icon"
                android:layout_gravity="center"
                android:layout_marginStart="75dp" />

            <Switch
                android:id="@+id/notificationSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notificationString"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="120dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/test_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/darkGrey"
            android:text="Logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationSwitch" />

    </LinearLayout>

</FrameLayout>
